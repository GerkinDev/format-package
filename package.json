{
  "name": "format-package",
  "version": "2.0.1",
  "description": "Sensible formatting and ordering of package.json",
  "license": "MIT",
  "engines": {
    "node": ">=6.9.0",
    "yarn": ">=0.27.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/camacho/format-package.git"
  },
  "bugs": {
    "url": "https://github.com/camacho/format-package/issues"
  },
  "homepage": "https://github.com/camacho/format-package#readme",
  "author": "Patrick <patrick@daftdevelopers.com>",
  "bin": ".bin/index.js",
  "main": "index.js",
  "scripts": {
    "docs": "scripts/markdown.js",
    "format": "npm-run-all format:*",
    "format:js": "prettier --single-quote --trailing-comma es5 --write \"{records,scripts,.bin}/**/*.js\"",
    "format:pkg": "./.bin/index.js -w -p package.json",
    "lint": "eslint \"{records,scripts,.bin}/**/*.js\" --fix",
    "precommit": "lint-staged && yarn docs",
    "prepublish": "yarn precommit && yarn prepush",
    "prepush": "yarn test",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma es5 --write",
      "eslint --fix",
      "git add"
    ],
    "package.json": [
      "format:pkg",
      "git add"
    ]
  },
  "bundle-size": [],
  "dependencies": {
    "chalk": "^2.1.0",
    "findup": "^0.1.5",
    "sort-scripts": "^1.0.0",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "execa": "^0.8.0",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.3",
    "markdown-magic": "^0.1.17",
    "markdown-magic-dependency-table": "^1.2.2",
    "markdown-magic-directory-tree": "^1.2.1",
    "markdown-magic-engines": "^1.0.1",
    "markdown-magic-install-command": "^1.3.0",
    "markdown-magic-package-scripts": "^1.2.0",
    "markdown-magic-prettier": "^1.0.3",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.3"
  },
  "optionalDependencies": {
    "husky": "^0.14.3"
  }
}

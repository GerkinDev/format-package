{
  "name": "format-package",
  "version": "5.0.0",
  "description": "Sensible formatting and ordering of package.json",
  "license": "MIT",
  "engines": {
    "node": ">=7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/camacho/format-package.git"
  },
  "bugs": {
    "url": "https://github.com/camacho/format-package/issues"
  },
  "homepage": "https://github.com/camacho/format-package#readme",
  "author": "Patrick <patrick@daftdevelopers.com>",
  "keywords": [
    "format",
    "order",
    "prettify",
    "organize",
    "package",
    "package.json",
    "prettier"
  ],
  "bin": "lib/cli/index.js",
  "main": "lib/index.js",
  "scripts": {
    "docs": "scripts/markdown.js",
    "format": "npm-run-all format:*",
    "format:pkg": "./lib/cli/index.js -wp",
    "format:src": "prettier --write \"**/*.{md,js,json}\"",
    "gamut": "npm-run-all reset docs format lint test",
    "lint": "eslint \"**/*.js\"",
    "prepublishOnly": "yarn gamut",
    "reset": "cross-env rimraf node_modules && yarn install",
    "test": "jest"
  },
  "lint-staged": {
    "**/package.json": [
      "yarn format:pkg",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "convert-hrtime": "^3.0.0",
    "globby": "10.0.1",
    "sort-scripts": "^1.0.1",
    "yargs": "^13.2.4"
  },
  "peerDependencies": {
    "prettier": "^1.6.0"
  },
  "devDependencies": {
    "codecov": "^3.5.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.17.2",
    "execa": "2.0.3",
    "glob": "^7.1.4",
    "husky": "3.0.0",
    "install-deps-postmerge": "^1.0.3",
    "jest": "^24.8.0",
    "lint-staged": "9.0.2",
    "markdown-magic": "^0.1.25",
    "markdown-magic-engines": "^1.0.2",
    "markdown-magic-install-command": "^1.3.1",
    "markdown-magic-package-scripts": "^1.2.1",
    "markdown-magic-prettier": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2"
  }
}
